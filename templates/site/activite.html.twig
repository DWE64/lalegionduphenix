							<div class="card-deck col-12 mx-0">
								<div class="card bg-light border-dark">
								<!-- <img src="/lalegionduphenix/img/jdr/anima.jpg" id="imgJdr"/>-->
									<img class="card-img-top" src="{{ absolute_url(asset('img/eventOrganise/' ~ eventOrga.imgEventOrga))}}" alt='{{ eventOrga.titre}}' id="imgJdr"/>
									<div class="card-header border border-light rounded" id="boutonDeroulantCarte">
										<h5 class="mb-0 text-center">
											<button class="btn btn-link" data-toggle="collapse" data-target="#collapse{{ eventOrga.id }}" aria-expanded="false" aria-controles="collapse{{ eventOrga.id() }}">
												{{eventOrga.titre}}
											</button>
										</h5>
									</div>
									<div id="collapse{{ eventOrga.id }}" class="collapse" aria-labelledby="boutonDeroulantCarte" data-parent="#accordion">			
										<div class="card-body" id="paragrapheDescription">
											<p class="card-text">{{ eventOrga.description}}</p>
										</div>
									</div>	
								</div>
							</div>	
						</div>
					
					{% endfor %}
					
					
					</div>
					</div>
				</div>			
			</aside>
			{% endif %}
			{% if listeEventPart %}
			<aside class="container-fluid my-3" id="asideJdr">
			<div class="row justify-content-center">
				<h1 class="col-12 text-left my-4">Les diff&eacute;rents &eacute;v&egrave;nements auquels nous participons :</h1>
				 	<div class="col-12">
				 	<div class="row">
					{% for eventPart in listeEventPart %}
						<div class="col-xl-4 col-lg-4 col-md-6 col-sm-12 col-12 mx-0 my-2" id="accordion">
							<div class="card-deck col-12 mx-0">
								<div class="card bg-light border-dark">
								<!-- <img src="/lalegionduphenix/img/jdr/anima.jpg" id="imgJdr"/>-->
									<img class="card-img-top" src="{{ absolute_url(asset('img/evenementParticiper/' ~ eventPart.imgEventPart))}}" alt='{{ eventPart.titre}}' id="imgJdr"/>
									<div class="card-header border border-light rounded" id="boutonDeroulantCarte">
										<h5 class="mb-0 text-center">
											<button class="btn btn-link" data-toggle="collapse" data-target="#collapse{{ eventPart.id }}" aria-expanded="false" aria-controles="collapse{{ eventPart.id }}">
												{{eventPart.titre}}
											</button>
										</h5>
									</div>
									<div id="collapse{{ eventPart.id }}" class="collapse" aria-labelledby="boutonDeroulantCarte" data-parent="#accordion">			
										<div class="card-body" id="paragrapheDescription">
											<p class="card-text">{{ eventPart.description}}</p>
										</div>
									</div>	
