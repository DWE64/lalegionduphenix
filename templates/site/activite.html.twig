					{% endfor %}
					
					
					</div>
					</div>
				</div>			
			</aside>
			{% endif %}
			</div>
			<div class="col-xl-2 col-lg-2 col-md-12 col-sm-12">
			</div>
		</div>
		</section>
		</div>
{% endblock %}




