{% extends 'base.html.twig' %}

{% block section %}

		
		
        <div class="col-xl-10 col-lg-10 col-md-9 col-sm-12">
		<section class="container-fluid" >			
        	<div class="row justifiy-content-center">
			<div class="col-xl-10 col-lg-10 col-md-12 col-sm-12">
			<h1 class="font-weight-bold font-italic text-center">Gestion des Activit&eacute;s</h1>
			<aside class="container-fluid " >
				<!-- mettre un formulaire de modification ici en selectionnant l'id souhaité et les modification souhaitée -->
				<div class="row justify-content-center">
					<div class="col-xl-4 col-lg-4 col-md-12 col-sm-12 col-12 mb-5">
						{{ form_start(formNewJeu,{'attr':{'novalidate':'novalidate','role':'form'}})}}
						<div class="form-row my-2 mx-0">
							<div class="form-group col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12 px-0">
								<div class="row mx-0">
							        {{ form_widget(formNewJeu.titre) }}
							    </div>
							</div>
							<div class="form-group col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12 px-0">
								<div class="row mx-0">
						            {{ form_widget(formNewJeu.description) }}
						    	</div>
							</div>
							<div class="form-group col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12 px-0">
								<div class="row mx-0">
						            {{ form_widget(formNewJeu.image) }}
						        </div>
						    </div>
						</div>
												
							    {{ form_widget(formNewJeu.publier) }}
							
						
						{{ form_end(formNewJeu) }}
					</div>
					<div class="col-xl-4 col-lg-4 col-md-12 col-sm-12 col-12 mb-5">
						{{ form_start(formModifJeu,{'attr':{'novalidate':'novalidate','role':'form'}})}}
						<div class="form-row my-2 mx-0">
							<div class="form-group col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12 px-0">
								<div class="row mx-0">
							        {{ form_widget(formModifJeu.id) }}
							    </div>
							</div>
							<div class="form-group col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12 px-0">
								<div class="row mx-0">
							        {{ form_widget(formModifJeu.titre) }}
							    </div>
							</div>
							<div class="form-group col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12 px-0">
								<div class="row mx-0">
						            {{ form_widget(formModifJeu.description) }}
						    	</div>
							</div>
							<div class="form-group col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12 px-0">
								<div class="row mx-0">
						            {{ form_widget(formModifJeu.image) }}
						        </div>
						    </div>
						</div>
												
							    {{ form_widget(formModifJeu.modifier) }}
							
						
						{{ form_end(formModifJeu) }}
					</div>
					<div class="col-xl-4 col-lg-4 col-md-12 col-sm-12 col-12 text-center mb-5">
						{{ form_start(formSup,{'attr':{'novalidate':'novalidate','role':'form'}})}}
						<div class="form-row my-2 mx-0">
							<div class="form-group col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12 px-0">
								<div class="row mx-0 justify-content-center">
						            {{ form_widget(formSup.id) }}
						        </div>
						    </div>
						</div>
							
						    {{ form_widget(formSup.supprimer) }}
						
						{{ form_end(formSup) }}
					</div>
				</div>
			</aside>	
			<aside class="container-fluid">
				<div class="row">
					<div class="col table-responsive">
						<table class="table table-secondary table-striped table-bordered table-hover table-sm">
							<thead>
								<tr>
									<th>Id_Jeu</th>
									<th>titre</th>									
									<th>Description</th>
									<th>Image</th>
								</tr>
							</thead>
							<tbody>
							{#{  dump(listeUser) }#}
							{% for jeu in listeJeu %}
								{#{  dump(utilisateur) }#}
								
								<tr>
									<td>{{jeu.getId() }}</td>
									<td>{{jeu.getTitre() }}</td>
									<td>{{jeu.getDescription()}}</td>
									<td><img class="img-fluid rounded" src='{{ absolute_url(asset('img/jdr/' ~ jeu.getImgJeu())) }}' alt='{{ jeu.getTitre() }}'/></td>																	
								</tr>
							{% endfor %}
								
							</tbody>
						</table>
					</div>
				</div>
			</aside>
			
			</div>
			<div class="col-xl-2 col-lg-2 col-md-12 col-sm-12">
			</div>
		</div>
		</section>
		</div>
		
{% endblock %}




