{% extends 'base.html.twig' %}

{% block section %}

		
		
        <div class="col-xl-10 col-lg-10 col-md-9 col-sm-12">
		<section class="container-fluid" >
			<h4><a href="{{ path('listeArticle') }}">Liste d'article</a> > {% if article.titre %}Titre article: "{{ article.titre}}"{%  else %}Sous-titre article: "{{ article.sousTitre }}"{% endif %}</h4>			
        	<div class="row justifiy-content-center">
			<div class="col-xl-10 col-lg-10 col-md-12 col-sm-12">
			<h1 class="font-weight-bold font-italic text-center">{{ article.titre }}</h1>
			<aside class="container-fluid">
				<div class="row">
					<div class="col table-responsive">
						<table class="table table-secondary table-striped table-bordered table-hover table-sm">
							<thead>
								<tr>
									<th></th>
									<th>Informations</th>
									<th>Action</th>
								</tr>
							</thead>
							<tbody>
								<tr>
									<td>Id article</td>
									<td>{{article.id }}</td>
									<td><a href="{{path('edit_article',{id: article.id})}}" id="lienMenuAccueil">Editer</a></td>
								</tr>
								<tr>
									<td>Titre</td>
									<td>{{article.titre }}</td>
									<td><a href="{{path('edit_article',{id: article.id})}}" id="lienMenuAccueil">Editer</a></td>
								</tr>
								<tr>
									<td>Sous-Titre</td>
									<td>{% include template_from_string(article.sousTitre)%}</td>
									<td><a href="{{path('edit_article',{id: article.id})}}" id="lienMenuAccueil">Editer</a></td>
								</tr>
								<tr>
									<td>Texte descriptif</td>
									<td>{% include template_from_string(article.description)%}</td>
									<td><a href="{{path('edit_article',{id: article.id})}}" id="lienMenuAccueil">Editer</a></td>
								</tr>
								{% if article.imgArticle%}
								<tr>
									<td>Image Article</td>
									<td><img class="img-fluid rounded" src='{{ absolute_url(asset('img/article/' ~ article.imgArticle)) }}' alt='{{ article.titre }}'/></td>
									<td><a href="{{path('edit_article',{id: article.id})}}" id="lienMenuAccueil">Editer</a></td>
								</tr>
								{% endif %}
							</tbody>
						</table>
					</div>
				</div>
			</aside>
			
			</div>
			<div class="col-xl-2 col-lg-2 col-md-12 col-sm-12">
			</div>
		</div>
		</section>
		</div>
		
{% endblock %}




